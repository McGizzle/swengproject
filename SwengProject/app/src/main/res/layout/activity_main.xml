<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="swengproject.swengproject.MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:background="#cc3f35"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="0dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteHeight="56dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:text="New Project"
        android:textSize="15dp"
        android:background="#cc3f35"
        android:layout_width="113dp"
        android:textColor="#ffffff"
        android:layout_height="55dp"
        android:id="@+id/new_p_btn"
        android:layout_marginStart="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:text="New Individual"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:background="#cc3f35"
        android:layout_width="113dp"
        android:layout_height="55dp"
        android:id="@+id/button2"
        android:layout_marginStart="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/new_p_btn" />

    <Button
        android:text="Assign Object"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:background="#cc3f35"
        android:layout_width="113dp"
        android:layout_height="55dp"
        android:id="@+id/button3"
        android:layout_marginStart="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.02" />

    <Button
        android:text="Scan To Identify"
        android:textSize="15dp"
        android:background="#cc3f35"
        android:textColor="#ffffff"
        android:layout_width="113dp"
        android:layout_height="55dp"
        android:id="@+id/button4"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginEnd="56dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="56dp" />

    <Button
        android:text="Generate List"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:background="#cc3f35"
        android:layout_width="113dp"
        android:layout_height="55dp"
        android:id="@+id/button5"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        android:layout_marginEnd="56dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="56dp" />

    <Button
        android:text="Scan For Info"
        android:textSize="15dp"
        android:background="#cc3f35"
        android:textColor="#ffffff"
        android:layout_width="113dp"
        android:layout_height="55dp"
        android:id="@+id/button6"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        android:layout_marginEnd="56dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:text="Inventory Tracker"
        android:textAlignment="center"
        android:layout_width="208dp"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_height="35dp"
        tools:layout_editor_absoluteY="4dp"
        tools:layout_editor_absoluteX="88dp"
        android:id="@+id/textView" />


</android.support.constraint.ConstraintLayout>
