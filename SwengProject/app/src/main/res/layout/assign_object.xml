<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="swengproject.swengproject.MainActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Object Name"
        android:ems="10"
        android:id="@+id/objectId"
        tools:layout_editor_absoluteX="30dp"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Group Name"
        android:ems="10"
        android:id="@+id/groupId"
        tools:layout_editor_absoluteX="30dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/objectId" />

    <Button
        android:text="Submit"
        android:background="#cc3f35"
        android:textColor="#ffffff"
        android:layout_width="99dp"
        android:layout_height="54dp"
        android:id="@+id/button7"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.57"
        android:layout_marginTop="144dp"
        app:layout_constraintTop_toBottomOf="@+id/personID"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <Button

        android:layout_width="88dp"
        android:layout_height="48dp"
        android:background="@drawable/home_button2"
        android:id="@+id/homeButton"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Person Name"
        android:ems="10"
        tools:layout_editor_absoluteX="30dp"
        android:id="@+id/personID"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/groupId" />

    <Button
        android:text="Choose Date"
        android:background="#cc3f35"
        android:textColor="#ffffff"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:id="@+id/chooseDate"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="160dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.06"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/personID"
        app:layout_constraintVertical_bias="0.78" />

    <TextView
        android:text="date"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_width="109dp"
        android:layout_height="23dp"
        tools:layout_editor_absoluteY="367dp"
        tools:layout_editor_absoluteX="155dp"
        android:id="@+id/dateShow" />

</android.support.constraint.ConstraintLayout>