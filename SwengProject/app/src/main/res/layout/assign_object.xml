<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="swengproject.swengproject.MainActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Object Name"
        android:ems="10"
        android:id="@+id/objectId"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/personET"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/homeButton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/personET" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Project Name"
        android:ems="10"
        android:id="@+id/groupId"

        app:layout_constraintRight_toLeftOf="@+id/homeButton"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/personET"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/chooseDate"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="16dp" />


    <Button
        android:text="SUBMIT"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:background="#cc3f35"
        android:textColor="#ffffff"
        android:id="@+id/submitButton"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="96dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/groupId"
        app:layout_constraintVertical_bias="0.94" />

    <Button

        android:layout_width="88dp"
        android:layout_height="48dp"
        android:background="@drawable/home_button2"
        android:id="@+id/homeButton"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp" />


    <Button
        android:text="Choose Date"
        android:background="#cc3f35"
        android:textColor="#ffffff"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:id="@+id/chooseDate"

        android:layout_marginStart="32dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/groupId" />


    <TextView
        android:text=""
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_width="109dp"
        android:layout_height="23dp"
        android:id="@+id/dateShow"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="176dp"
        android:layout_marginLeft="176dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/groupId"
        app:layout_constraintBottom_toTopOf="@+id/submitButton"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintVertical_bias="0.53" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Person Name"
        android:ems="10"
        android:id="@+id/personET"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/objectId"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/groupId"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/groupId" />


</android.support.constraint.ConstraintLayout>